@inherits TextboxFilter
@typeparam TOutputValue

<div class="form-group col-sm-6">
    <div class="filter-label">
        <RadzenLabel Text="@FilterOptions.Label" Component="@(InstanceId + "_textbox")"></RadzenLabel>
        @if (Value != null)
        {
            <RadzenButton Id="main_Grid_Search" Click="@ResetToDefault" ButtonType="ButtonType.Button">
                 Clear
            </RadzenButton>           
        }
    </div>
    <RadzenTextBox Name="@(InstanceId + "_textbox")" Change="ValueChanged" Value="@(Value as string)" class="form-control" />
</div>
